				<div class="col-12 col-sm-10">
					<%= course.description %>
				</div>
				<div class="col-12 col-sm-2">
					<%= link_to "Go to Course", course_path(course), class: 'btn btn-secondary' %>
				</div>
			</div>
		</div>
		<% end %>

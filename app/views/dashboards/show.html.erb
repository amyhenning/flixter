<br />

	<h1 class="text-center">What I'm Learning</h1>
	<% current_user.enrolled_courses.each do |course| %>
		<br />
		<div class="booyah-box col-10 offset-1">
		<h3 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
		<%= image_tag course.image, class: 'img-fluid center' %>
		<br /><br />
			<div class="row">
				<div class="col-12 col-sm-10">
					<%= course.description %>
				</div>
				<div class="col-12 col-sm-2 text-center">
					<%= link_to "Go to Course", course_path(course), class: 'btn btn-secondary' %>
				</div>
			</div>
		</div>
	<% end %>
	<br />
	<br />
